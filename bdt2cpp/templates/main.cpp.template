int main(int argc, char const *argv[]) {
  std::vector<double> input;
  for(int i=1; i<argc; ++i){
    input.push_back(std::strtod(argv[i], nullptr));
  }

  auto val = ensemble(input);
  std::cout << val << "\n" << sigmoid(val) << std::endl;

  return 0;
}
